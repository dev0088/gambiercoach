<% if not request.xhr? %>
<div id="<%= params[:controller] %>" class="ajax-scaffold">
  <div id="<%= params[:action] %>">
<% end %>
    <div class="ajax-scaffold-header">
      <div class="actions">
        <% new_params = params.merge(:controller => '/routes', :action => 'new') %>
        <%= link_to "Create New", new_route_path, :class => "create", remote: true %>
      </div>
      <h2>Routes</h2>
  </div>
  <table cellpadding="0" cellspacing="0">
  <thead>
    <tr>
      <%= render :partial => 'column_headings' %>
    </tr>
  </thead>
  <tbody id="transport_session-tbody">
    <% @routes.each do |route| %>
        <tr>
          <td><%= route.transport_session.name %></td>
          <td><%= route.point_a %></td>
          <td><%= route.point_b %></td>
          <td><%= route.information %></td>
          <td><%= route.price %></td>
          <td><%= route.display_order %></td>
          <td>
            <%= link_to "Edit", edit_route_path(route) %>
          </td>
          <td>
            <%= link_to "Delete", route_path(route),
                :method => :delete, :confirm => 'Are you sure?' %>
          </td>
      </tr>
    <% end %>
  </tbody>

</table>
<%= will_paginate @transport_sessions %>
