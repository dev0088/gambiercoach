<% administrator_id = if administrator.id.nil? then 0 else administrator.id end %>

<fieldset>
	<div class="row">
		<!--[form:administrator]-->
<% unless administrator.superuser? -%>
<div class="form-element">
  <label for="administrator_username">User Name</label>
  <%= text_field 'administrator', 'username' , {:class=>"text-input", :value => administrator.username} %>
</div>
<% end -%>

<div class="form-element">
  <label for="administrator_new_password">Set a password</label>
  <%= password_field 'administrator', 'new_password' , {:class=>"text-input"} %>
</div>
</div>
<div class="row">
<div class="form-element">
  <label for="administrator_email">Email</label>
  <%= text_field 'administrator', 'email' , {:class=>"text-input", :value => administrator.email} %>
</div>

<!--[eoform:administrator]-->

	</div>
</fieldset>
